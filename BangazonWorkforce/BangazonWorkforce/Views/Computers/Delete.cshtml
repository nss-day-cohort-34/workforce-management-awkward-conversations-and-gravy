@model BangazonWorkforce.Models.Computer

@{
    ViewData["Title"] = "Delete";
}

<h1>DeleteConfirmed</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Computer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DecomissionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DecomissionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComputerInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComputerInfo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @if (Model.AssignmentCount > 0)
        {
            <p>You cannot delete this computer because it has been assigned to an employee.</p>
        }
        else
        {
        <input type="submit" value="Delete" class="btn btn-danger" />
        }
        <a asp-action="Index">Back to List</a>
    </form>
</div>
